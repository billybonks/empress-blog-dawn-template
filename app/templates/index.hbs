<Cover @description={{this.blog.description}} @coverImage={{this.blog.coverImage}}/>
<FeaturedArticles>
  {{#each this.model as |post|}}
    {{#if post.featured}}
      <FeaturedArticle @image={{post.image}} @title={{post.title}} @postId={{post.id}}>
      </FeaturedArticle>
    {{/if}}
  {{/each}}
</FeaturedArticles>
<Feed @posts={{this.model}} />

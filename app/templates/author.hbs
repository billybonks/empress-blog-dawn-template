

{{#let this.model as |author|}}
<header class="page-head">
    <h1 class="page-head-title">{{this.author.name}}</h1>
    {{#if this.author.content}}<p class="page-head-description">{{this.author.content}}</p>{{/if}}

    <div class="author-meta">
        <div class="author-links">
            {{#if this.author.website}}
            <a href={{author.website}} target="_blank" rel="noopener noreferrer">Website</a> <span class="divider">/</span>
            {{/if}}
            {{#if this.author.twitter}}
            <a href="https://twitter.com/{{author.twitter}}" target="_blank" rel="noopener noreferrer">Twitter</a> <span class="divider">/</span>
            {{/if}}
            {{#if this.author.facebook}}
            <a href="https://facebook.com/{{author.facebook}}" target="_blank" rel="noopener noreferrer">Facebook</a> <span class="divider">/</span>
            {{/if}}
            {{!-- <a href="https://feedly.com/i/subscription/feed/{{url absolute="true"}}rss/" target="_blank" rel="noopener">RSS</a> --}}
        </div>
    </div>
</header>
{{/let}}

<div class="post-feed">
{{#each this.author.posts as |post|}}

    {{!-- The tag below includes the markup for each post - partials/post-card.hbs --}}
    <PostCard @post={{post}} />

{{/each}}
</div>

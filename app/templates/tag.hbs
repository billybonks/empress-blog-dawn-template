
{{#let this.model.tag as |tag|}}
<header class="page-head">
    <h1 class="page-head-title">{{tag}}</h1>
    <p class="page-head-description">
        {{#if tag.description}}
            {{tag.description}}
        {{else}}
            A collection of {{plural this.model.posts.length empty='posts' singular='% post' plural='% posts'}}
        {{/if}}
    </p>
</header>
{{/let}}

<div class="post-feed">
{{#each this.model.posts as |post|}}

    {{!-- The tag below includes the markup for each post - partials/post-card.hbs --}}
    <PostCard @post={{post}} />

{{/each}}
</div>

<section class="feed">
  {{#each (sort-by 'date:desc' @posts) as |post|}}
    <LinkTo class="feed-entry__container" @route='post' @model={{post.id}}>
      <span class="feed-entry__date">{{date-short post.date}}</span>
      <span class="feed-entry__title">{{post.title}}</span>
      <span class="feed-entry__ttr">{{reading-time post}}</span>
    </LinkTo>
  {{/each}}
</section>
